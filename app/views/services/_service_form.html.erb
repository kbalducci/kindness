<%= simple_form_for([Service.new]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Enter your volunteer opportunity here!' %>
    <%= f.input :date, as: :date %>
    <%= f.input :zipcode %>
    <%= f.input :description %>
    <%= f.input :requirement %>
    <%= f.association :tags, as: :check_boxes, collection: Tag.name, label_method: :name, value_method: :id, include_blank: false, collection: Tag.all.order('name') %>

  </div>

  <br />

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-warning btn-sm" %>
  </div>

<% end %>
