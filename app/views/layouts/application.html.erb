<!DOCTYPE html>
<html>
<head>
  <title><%= ['Kindness', @title].compact.join(' | ') %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
 <!-- Datatable below -->
  <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">
  <%= javascript_include_tag 'application' %>
<!-- Datatable below -->
<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<!-- Datatable below -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js"></script>

  <%= csrf_meta_tags %>
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/united/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="wrap">
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a><%= link_to 'Lift Up!', root_path, class: "navbar-brand" %></a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to 'My Dashboard', user_path(current_user) %></li>
          <li><%= link_to 'RAKs', acts_path %></li>
          <li><%= link_to 'Volunteer', services_path %></li>
          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>

        <% else %>
          <li><%= link_to('Sign Up Now', new_user_registration_path)%></li>
          <li><%= link_to('Sign In Now', new_user_session_path)%></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
<% if flash[:danger] %>
  <div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">x</button>
  <strong><%= flash[:danger] %></strong>
</div>
  <% end %>
<% if flash[:success] %>
  <div class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <strong><%= flash[:success] %></strong>
</div>
  <% end %>
<%= yield %>
</div>
</div>
</div>
